/* pages/posts/post.wxss */
swiper{
    width:100%;
    height:300rpx;
}

swiper image{
    width:100%;
    height:300rpx;
}

.post-containter{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
}

.post-auther-date{
    margin-top: 10rpx 0rpx 20rpx 10rpx;
}

.post-author{
    width:60rpx;
    height:60rpx;
    vertical-align: middle;
}

.post-date{
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
}

.post-title{
    font-size:34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom: 10px;
    margin-left:10px;
}

.post-image{
    margin-left: 16px;
    width:100%;
    height: 340rpx;
    margin: auto 0;
}

.post-content{
    color: #666;
    font-size: 26rpx;
    text-indent: 2rpx;
    margin-bottom: 10rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}

.video{
    height: 80rpx;
    margin-top: 10rpx;
    width: 100%;
    background-color: #cccccc;
    font-size: 32rpx;
    line-height: 80rpx;
}

.video_text{
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.video_son{
    height: 80rpx;
    margin-top: 10rpx;
    width: 100%;
    background-color: #ffffff;
    font-size: 32rpx;
    line-height: 80rpx;
    display: none;
}

.video_text{
    margin-left: 20rpx;
    margin-right: 20rpx;
}
